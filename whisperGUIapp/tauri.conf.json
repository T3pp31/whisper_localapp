{
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "./dist",
    "distDir": "./dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Whisper GUI App",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": false,
        "exists": true,
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "copyFile": true,
        "scope": ["$APPDATA", "$APPCONFIG", "$APPLOCALDATA", "$APPCACHE", "$APPLOG", "$TEMP", "$HOME", "$DESKTOP", "$DOCUMENT", "$DOWNLOAD", "$PICTURE", "$PUBLIC", "$VIDEO", "$RESOURCE", "$APP", "$LOG", "$TEMP", "**"]
      },
      "path": {
        "all": true
      },
      "clipboard": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.whisper.gui",
      "targets": ["nsis"],
      "resources": [
        "models/README.txt"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Whisper GUI App",
        "width": 1280,
        "height": 820,
        "minWidth": 1100,
        "minHeight": 720
      }
    ]
  }
}
